<?xml version="1.0"?>
<chroma>
<annotation>
overlap test
</annotation>	
<Param>
  <InlineMeasurements>

    <elem>
    <annotation>
      Gerenrate/Load H-wilson eigensystem for the overlap fermion
    </annotation>
       <Name>EIGEN_MAKER</Name>
       <Frequency>1</Frequency>
       <Param>
          <FermionAction>
            <FermAct>HWILSON</FermAct>
            <Kappa>0.2</Kappa>
            <use_gpu>true</use_gpu>
            <FermionBC>
              <FermBC>SIMPLE_FERMBC</FermBC>
              <boundary>1 1 1 1</boundary>
           </FermionBC>
          </FermionAction>
         <Noeigen>50</Noeigen>
         <extra_space>100</extra_space>
         <chebyshev_cut>0.18</chebyshev_cut>
         <chebyshev_order>100</chebyshev_order>
         <gpu_level>0</gpu_level>
         <check_residual>true</check_residual>
         <use_ckpoint>false</use_ckpoint>
         <filename>gs8t8iwa165_052.hw</filename>
       </Param>
       <NamedObject>
         <gauge_id>default_gauge_field</gauge_id>
         <eigen_id>HWeigen</eigen_id>
	<op_id>HWOP</op_id>
       </NamedObject>
    </elem>  

    <elem>
    <annotation>
      Gerenrate/Load overlap eigensystem
    </annotation>
       <Name>EIGEN_MAKER</Name>
       <Frequency>1</Frequency>
       <Param>
          <FermionAction>
            <FermAct>OVERLAP</FermAct>
            <Kappa>0.2</Kappa>
            <use_gpu>true</use_gpu>
            <HW_eigen>HWeigen</HW_eigen>
            <Noeigen_hw>50</Noeigen_hw>
            <accuracy>1e-12</accuracy>
            <topocharge_para>Boulder</topocharge_para>
            <FermionBC>
              <FermBC>SIMPLE_FERMBC</FermBC>
              <boundary>1 1 1 1</boundary>
            </FermionBC>
          </FermionAction>
         <Noeigen>50</Noeigen>
         <extra_space>50</extra_space>
         <chebyshev_cut>0.5</chebyshev_cut>
         <chebyshev_order>5</chebyshev_order>
         <gpu_level>0</gpu_level>
         <check_residual>true</check_residual>
         <use_ckpoint>false</use_ckpoint>
         <filename>gs8t8iwa165_052.ov.sys</filename>
       </Param>
       <NamedObject>
         <gauge_id>default_gauge_field</gauge_id>
         <eigen_id>OVeigen</eigen_id>
	<op_id>OVOP</op_id>
       </NamedObject>
    </elem>

   <elem>
      <Name>MAKE_SOURCE</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>6</version>
        <Source>
          <version>2</version>
          <SourceType>POINT_SOURCE</SourceType>
          <j_decay>3</j_decay>
          <t_srce>0 0 0 0</t_srce>

          <Displacement>
            <version>1</version>
            <DisplacementType>NONE</DisplacementType>
          </Displacement>
        </Source>
      </Param>
      <NamedObject>
        <gauge_id>default_gauge_field</gauge_id>
        <source_id>pt_source</source_id>
      </NamedObject>
    </elem>



	
<elem>
<annotation>
inverter test
</annotation>
<Name>PROPAGATOR_MULTI</Name>
<Frequency>1</Frequency>
<mass>0.0300 0.05 0.1</mass>
<maxiter>600</maxiter>
<cg_error>1.0e-8</cg_error>
<flag_dc>1</flag_dc>
<Param>
       <version>10</version>
        <quarkSpinType>FULL</quarkSpinType>
        <obsvP>false</obsvP>
        <numRetries>1</numRetries>
        <FermionAction>
         <FermAct>CLOVER</FermAct>
         <Kappa>0.115</Kappa>
         <clovCoeff>1.17</clovCoeff>
         <clovCoeffR>0.91</clovCoeffR>
         <clovCoeffT>1.07</clovCoeffT>
         <AnisoParam>
           <anisoP>true</anisoP>
           <t_dir>3</t_dir>
           <xi_0>2.464</xi_0>
           <nu>0.95</nu>
         </AnisoParam>
         <FermionBC>
           <FermBC>SIMPLE_FERMBC</FermBC>
           <boundary>1 1 1 -1</boundary>
         </FermionBC>
        </FermionAction>
        <InvertParam>
	<invType>CG_INVERTER</invType>
          <RsdCG>1.0e-12</RsdCG>
          <MaxCG>1000</MaxCG>
        </InvertParam>
</Param>
<NamedObject>
<gauge_id>default_gauge_field</gauge_id>
<source_id>pt_source</source_id>
<prop_id>
<elem>prop1</elem>
<elem>prop2</elem>
<elem>prop3</elem>
</prop_id>
<eigen_id>OVeigen</eigen_id>
<op_id>OVOP</op_id>
</NamedObject>
</elem>


    <elem>
    <annotation>
      Erase Overlap eigensystem
    </annotation>
       <Name>EIGEN_ERASER</Name>
       <Frequency>1</Frequency>
       <NamedObject>
         <eigen_id>OVeigen</eigen_id>
       </NamedObject>
    </elem>       

    <elem>
    <annotation>
      Erase HWilson eigensystem
    </annotation>
       <Name>EIGEN_ERASER</Name>
       <Frequency>1</Frequency>
       <NamedObject>
         <eigen_id>HWeigen</eigen_id>
       </NamedObject>
    </elem>       
        



  </InlineMeasurements>
    <nrow>8 8 8 8</nrow>
</Param>

  <RNG>
    <Seed>
      <elem>11</elem>
      <elem>11</elem>
      <elem>11</elem>
      <elem>0</elem>
    </Seed>
  </RNG>

  <Cfg>
    <cfg_type>KYU</cfg_type>
    <cfg_file>gs8t8iwa165_052</cfg_file>
  </Cfg>

</chroma>
